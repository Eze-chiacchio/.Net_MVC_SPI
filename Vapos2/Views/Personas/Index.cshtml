@model IEnumerable<Vapos2.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h2>Personas</h2>

<p>
    <a asp-action="Create">Agregar encargado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreApe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreApe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.nombreApe">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.nombreApe">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
